    "version": "0.2.0",
    "configurations": [

        {
            "name": "Python: Attach using Process Id",
            "type": "python",
            "request": "attach",
            "processId": "${command:pickProcess}"
        },
        
        {
                "name": "Python: Attach remote 5678",
                "type": "python",
                "request": "attach",
                "connect": {
                    "host": "127.0.0.1",
                    "port": 5678
                }
        },

        {
            "name": "Python: khan-testcase",
            "type": "python",
            "request": "launch",
            "program": "${file}",
            "cwd" : "${fileDirname}",
            "console": "internalConsole",
            "args" : [   
                "--debug",
                "--printlog",                
                "--test"             
            ]
        },

        {
            "name": "Python: open api",
            "type": "python",
            "request": "launch",
            "program": "${file}",
            "cwd" : "${fileDirname}",
            "console": "internalConsole",
            "args" : [
                "--debug",
                "--printlog",                
                "--port", "7000"
                //"--dummy",
                //"--script_config", "./config/subconfig/global.json"
            ]
        },

    ]
}

